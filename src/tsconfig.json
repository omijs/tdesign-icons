{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "h.f",
    "allowJs": true,
    "declaration": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "../src/*"
      ]
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx", 
    "../omi.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}